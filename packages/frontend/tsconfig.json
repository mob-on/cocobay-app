{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@config/*": ["./config/*"],
      "@shared/*": ["../shared/*"],
      "@lib/*": ["./src/shared/lib/*"],
      "@components/*": ["../components/*"],
      "@pages/*": ["../pages/*"],
      "@hooks/*": ["./src/shared/hooks/*"],
      "@utils/*": ["../shared/utils/*"],
      "@tests/*": ["../tests/*"],
      "@media/*": ["./public/media/*"]
    }
  },
  "include": [
    "../shared/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/next.config.mjs",
    "declarations.d.ts",
    "eslint.config.mjs",
    "__mocks__/svgMock.ts",
    "setupTests.ts",
    "jest.config.js"
  ],
  "exclude": ["node_modules"]
}
