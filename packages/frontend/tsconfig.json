{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@shared/*": ["../shared/*"],
      "@lib/*": ["src/shared/lib/*"],
      "@components/*": ["../components/*"],
      "@pages/*": ["../pages/*"],
      "@hooks/*": ["src/shared/hooks/*"],
      "@utils/*": ["../shared/utils/*"],
      "@tests/*": ["../tests/*"]
    }
  },
  "include": [
    "../shared/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/next.config.mjs",
    "declarations.d.ts",
    "eslint.config.mjs",
    "__mocks__/svgMock.ts",
    "setupTests.ts",
    "jest.config.js"
  ],
  "exclude": ["node_modules"]
}
