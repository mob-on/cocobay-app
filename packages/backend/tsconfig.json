{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"],
      "@shared/*": ["../shared/*"],
      "@config/*": ["./config/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]
}
