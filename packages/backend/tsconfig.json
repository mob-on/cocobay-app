{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"],
      "@shared/*": ["../shared/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["../shared/*", "**/*.ts"]
}
