#!/bin/sh
husky install
echo "Frontend config - please configure packages/frontend/config/local.ts"
test -f packages/frontend/config/local.ts || cp packages/frontend/config/local.template.ts packages/frontend/config/local.ts
echo "Backend config - please configure packages/backend/config/local.ts"
test -f packages/backend/config/local.ts || cp packages/backend/config/local.template.ts packages/backend/config/local.ts